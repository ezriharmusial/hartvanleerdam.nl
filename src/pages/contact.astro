---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Zoek contact!" />

  <ContactUs
    title="Laat vandaag nog een bericht achter!"
    subtitle="Voor sneller antwoord, bekijk onze veelgestelde vragen. Waarschijnlijk vind je daar al je antwoord! Zo niet, dan staat ons team klaar om je te woord te staan."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Naam',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Bericht',
    }}
    disclaimer={{
      label:
        'Met het invullenvan dit contact formulier, geef je toestemming aan ons voor het verzamelen van jouw persoonlijke informatie.',
    }}
    description="Ons team reageert meestal binnen 24 kantoor uren, of 3 dagen."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="We zijn hier om te helpen!"
    items={[
      {
        title: 'General support',
        description: `Chat with us for inquiries related to account management, website navigation, payment issues, accessing purchased templates or general questions about the website's functionality.`,
      },
      {
        title: 'Contact sales',
        description:
          'Chat with us for questions about purchases, customization options, licensing for commercial use, inquiries about specific template, etc.',
      },
      {
        title: 'Technical support',
        description:
          'Chat with us when facing issues like template installation, problems editing difficulties, compatibility issues with software or download errors, or other technical challenges related to using the templates.',
      },
      {
        title: 'Telefoon',
        description: '+31 6 14453388',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'info@hartvanleerdam.nl',
        icon: 'tabler:mail',
      },
      {
        title: 'Adres',
        description: 'Techniekweg 22, 4143 HV Leerdam. (Tegenover Van der Leeden houthandel, Ingang opslagbox)',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
